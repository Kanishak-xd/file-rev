{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}